<section class="content" id="vue-app">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    <h1 class="page-header"><i class="@Icons.Edit" aria-hidden="true"></i>@Resources.EditRequest</h1>
                    @*<small><b>Status: </b>New</small>*@
                    <b>Status: </b><span v-text="entity.StatusRepresentation"></span>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="input-heading"><i class="@Icons.User" aria-hidden="true"></i>@Resources.Teacher</label>
                            <div class="form-group">
                                <select2 url="@Url.HttpRouteUrl(RouteName.TeachersLookup, new { })"
                                         :settings="personSettings"
                                         display-prop="FullName"
                                         v-model="entity.Teacher">
                                </select2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="input-heading"><i class="@Icons.File" aria-hidden="true"></i>@Resources.ThemeLv</label>
                            <div class="form-group">
                                <textarea class="form-control resizeable" placeholder="@Resources.ThemeLv" v-model="entity.ThemeLV"></textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="input-heading"><i class="@Icons.File" aria-hidden="true"></i>@Resources.ThemeEng</label>
                            <textarea v-model="entity.ThemeENG" class="form-control resizeable" placeholder="@Resources.ThemeEng"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="input-heading"><i class="@Icons.Calendar" aria-hidden="true"></i>@Resources.StartYear</label>
                            <div class="form-group">
                                <select2 url="@Url.HttpRouteUrl(RouteName.StudyYears, new { })"
                                         :settings="select2Settings"
                                         display-prop="Name"
                                         v-model="entity.Start">
                                </select2>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="input-heading"><i class="@Icons.Calendar" aria-hidden="true"></i>@Resources.EndYear</label>
                            <div class="form-group">
                                <select2 url="@Url.HttpRouteUrl(RouteName.StudyYears, new { })"
                                         :settings="select2Settings"
                                         display-prop="Name"
                                         v-model="entity.End">
                                </select2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-left">
                        <a href="@Url.Action("Index","Request")" class="btn btn-default"><i class="@Icons.List" aria-hidden="true"></i>@Resources.ToList</a>
                        <button type="button" class="btn btn-danger" v-on:click="reject">@Resources.CancelRequest</button>
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary" v-on:click="submit">@Resources.Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script>

        select2Settings = {
            processResults: function (data, params) {
                var txts = data.items.map(function (input, idx) {
                    return {
                        text: input.Name,
                        id: input.Id,
                        entity: input
                    };
                });
                params.page = params.page || 1;

                return {
                    results: txts,
                    pagination: {
                        more: (params.page * this.pageSize) < data.count
                    }
                };
            }
        }

        personSettings = {
            processResults: function (data, params) {
                var txts = data.items.map(function (input, idx) {
                    return {
                        text: input.FullName,
                        id: input.Id,
                        entity: input
                    };
                });
                params.page = params.page || 1;

                return {
                    results: txts,
                    pagination: {
                        more: (params.page * this.pageSize) < data.count
                    }
                };
            }
        }

        var app = {};

        async.parallel([
            function (callback) {
                getData("@Url.HttpRouteUrl(RouteName.GetStudentRequests, new { Id = ViewBag.Id })", callback);
            },
        ], function (err, result) {

            app = new Vue({
                el: '#vue-app',
                data: function () {
                    return {
                        entity: findEntity(result).data,
                        select2Settings: select2Settings,
                        personSettings: personSettings
                    }
                },
                methods: {
                    submit: function () {
                        var self = this;
                        $.ajax({
                            url: "@Url.HttpRouteUrl(RouteName.UpdateRequestStudent , new { })",
                            method: "POST",
                            data: JSON.stringify(self.entity),
                            contentType: "application/json; charset=utf-8"
                        }).done(function (data) {
                            navigation.redirect("@Url.Action("Index", "Request")");
                        }).error(handleError);
                    },
                    reject: function () {
                        var self = this;
                        $.ajax({
                            url: "@Url.HttpRouteUrl(RouteName.RejectByStudent , new { })",
                            method: "POST",
                            data: JSON.stringify(self.entity),
                            contentType: "application/json; charset=utf-8"
                        }).done(function (data) {
                            navigation.redirect("@Url.Action("TeacherRequests", "Request")");
                        }).error(handleError);
                    }
                }
            });
            updateAllTextAreasHeights();
        });

    </script>

}