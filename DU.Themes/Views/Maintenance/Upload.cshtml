@model IEnumerable<DU.Themes.Models.PersonModel>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box" id="vue-app">
                <div class="box-header with-border">
                </div>
                <div class="box-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@Resources.FirstName</th>
                                <th>@Resources.LastName</th>
                                <th>@Resources.StudentIdentifier</th>
                                <th>@Resources.ProgramName</th>
                                <th>@Resources.ProgramLevel</th>
                                <th>@Resources.StudyForm</th>
                                <th>@Resources.StudyYear</th>
                                <th>@Resources.Email</th>
                                <th>@Resources.IsImported</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var person in Model)
                            {
                                <tr   @if (!person.SuccessfulyImported) { <text>class="bg-red" </text> }>
                                    <td>@person.FirstName</td>
                                    <td>@person.LastName</td>
                                    <td>@person.StudentIdentifier</td>
                                    <td>@person.ProgramName</td>
                                    <td>@person.ProgramLevel</td>
                                    <td>@person.StudyForm</td>
                                    <td>@person.Year</td>
                                    <td>@person.Email</td>
                                    @if (person.SuccessfulyImported)
                                    {
                                        <td><i class="text-green glyphicon glyphicon glyphicon-ok">&nbsp;</i></td>
                                    }
                                    else
                                    {
                                        <td><i class="glyphicon glyphicon glyphicon-remove">&nbsp;</i></td>
                                    }
                                    
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>

